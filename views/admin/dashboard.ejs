<%- include('../partials/head', { pageCSS: 'admin-dashboard' }) %>

<!-- Admin Header -->
<header class="admin-header">
  <section class="container">
    <section class="admin-nav">
      <h1 class="admin-title">🛡️ Dashboard Administrativo</h1>
      <section class="admin-controls">
        <button class="refresh-btn" onclick="refreshDashboard()">🔄 Atualizar</button>
        <section class="status-indicator">
          <span class="status-dot online" id="system-status"></span>
          <span>Sistema Online</span>
        </section>
      </section>
    </section>
  </section>
</header>

<main class="admin-main">
  <section class="container">
    
    <!-- Métricas Principais -->
    <section class="metrics-overview">
      <section class="metrics-grid">
        <!-- Performance -->
        <section class="metric-card">
          <section class="metric-icon">⚡</section>
          <section class="metric-content">
            <h3>Performance</h3>
            <section class="metric-value" id="response-time"><%= data.performance.responseTime %></section>
            <section class="metric-label">Tempo de Resposta</section>
          </section>
          <section class="metric-trend positive">+5%</section>
        </section>

        <!-- Usuários Online -->
        <section class="metric-card">
          <section class="metric-icon">👥</section>
          <section class="metric-content">
            <h3>Usuários</h3>
            <section class="metric-value" id="users-online"><%= data.users.online %></section>
            <section class="metric-label">Online Agora</section>
          </section>
          <section class="metric-trend positive">+12%</section>
        </section>

        <!-- Requests -->
        <section class="metric-card">
          <section class="metric-icon">📊</section>
          <section class="metric-content">
            <h3>Requests</h3>
            <section class="metric-value" id="total-requests"><%= data.performance.requests.toLocaleString() %></section>
            <section class="metric-label">Hoje</section>
          </section>
          <section class="metric-trend positive">+8%</section>
        </section>

        <!-- Conversão -->
        <section class="metric-card">
          <section class="metric-icon">💰</section>
          <section class="metric-content">
            <h3>Conversão</h3>
            <section class="metric-value" id="conversion-rate"><%= data.users.conversion %></section>
            <section class="metric-label">Taxa de Conversão</section>
          </section>
          <section class="metric-trend positive">+3%</section>
        </section>
      </section>
    </section>

    <!-- Status das Integrações -->
    <section class="integrations-status">
      <h2>🔗 Status das Integrações</h2>
      <section class="integrations-grid">
        <% Object.entries(data.integrations).forEach(function([key, integration]) { %>
          <section class="integration-status-card" data-service="<%= key %>">
            <section class="integration-header">
              <h3>
                <% if (key === 'booking') { %>🏨 Booking.com<% } %>
                <% if (key === 'payment') { %>💳 Pagamentos<% } %>
                <% if (key === 'weather') { %>🌤️ Clima<% } %>
                <% if (key === 'analytics') { %>📊 Analytics<% } %>
              </h3>
              <section class="status-badge <%= integration.status %>">
                <%= integration.status === 'online' ? 'Online' : 'Aviso' %>
              </section>
            </section>
            <section class="integration-metrics">
              <section class="metric">
                <span class="metric-label">Latência:</span>
                <span class="metric-value"><%= integration.latency %></span>
              </section>
              <section class="metric">
                <span class="metric-label">Requests:</span>
                <span class="metric-value"><%= integration.requests %></span>
              </section>
            </section>
          </section>
        <% }); %>
      </section>
    </section>

    <!-- Segurança e Automação -->
    <section class="admin-grid">
      
      <!-- Painel de Segurança -->
      <section class="security-panel">
        <h2>🛡️ Segurança</h2>
        <section class="security-items">
          <section class="security-item">
            <section class="security-icon">🔒</section>
            <section class="security-content">
              <h4>SSL Certificado</h4>
              <span class="security-status active">Ativo</span>
            </section>
          </section>
          
          <section class="security-item">
            <section class="security-icon">🔥</section>
            <section class="security-content">
              <h4>Firewall</h4>
              <span class="security-status active">Protegido</span>
            </section>
          </section>
          
          <section class="security-item">
            <section class="security-icon">⚠️</section>
            <section class="security-content">
              <h4>Ameaças Bloqueadas</h4>
              <span class="security-count"><%= data.security.blocked %></span>
            </section>
          </section>
        </section>
        
        <button class="view-logs-btn" onclick="viewSecurityLogs()">
          📋 Ver Logs de Segurança
        </button>
      </section>

      <!-- Painel de Automação -->
      <section class="automation-panel">
        <h2>🤖 Automação</h2>
        <section class="automation-stats">
          <section class="automation-stat">
            <h4>📧 Emails Automáticos</h4>
            <section class="stat-details">
              <span>Enviados: <strong><%= data.automation.emails.sent %></strong></span>
              <span>Entregues: <strong><%= data.automation.emails.delivered %></strong></span>
              <span>Abertos: <strong><%= data.automation.emails.opened %></strong></span>
            </section>
          </section>
          
          <section class="automation-stat">
            <h4>🔔 Notificações</h4>
            <section class="stat-details">
              <span>Enviadas: <strong><%= data.automation.notifications.sent %></strong></span>
              <span>Clicadas: <strong><%= data.automation.notifications.clicked %></strong></span>
            </section>
          </section>
          
          <section class="automation-stat">
            <h4>💾 Backups</h4>
            <section class="stat-details">
              <span>Último: <strong><%= data.automation.backups.last %></strong></span>
              <span class="backup-status success">✅ Sucesso</span>
            </section>
          </section>
        </section>
      </section>
    </section>

    <!-- Reviews em Tempo Real -->
    <section class="live-reviews-panel">
      <h2>⭐ Reviews em Tempo Real</h2>
      <section class="reviews-overview">
        <section class="reviews-stats">
          <section class="stat">
            <span class="stat-number"><%= data.reviews.total.toLocaleString() %></span>
            <span class="stat-label">Total</span>
          </section>
          <section class="stat">
            <span class="stat-number"><%= data.reviews.average %></span>
            <span class="stat-label">Média</span>
          </section>
        </section>
        
        <section class="recent-reviews">
          <h4>Reviews Recentes:</h4>
          <% data.reviews.recent.forEach(function(review) { %>
            <section class="review-item">
              <section class="review-content">
                <strong><%= review.name %></strong>
                <span class="review-rating">
                  <% for(let i = 0; i < review.rating; i++) { %>★<% } %>
                </span>
              </section>
              <section class="review-text">"<%= review.text %>"</section>
              <section class="review-time"><%= review.time %> atrás</section>
            </section>
          <% }); %>
        </section>
      </section>
    </section>

    <!-- Gráficos e Analytics -->
    <section class="analytics-panel">
      <h2>📊 Analytics em Tempo Real</h2>
      <section class="charts-container">
        <section class="chart-card">
          <h3>Tráfego do Site</h3>
          <canvas id="traffic-chart" width="400" height="200"></canvas>
        </section>
        
        <section class="chart-card">
          <h3>Performance do Sistema</h3>
          <canvas id="performance-chart" width="400" height="200"></canvas>
        </section>
      </section>
    </section>

  </section>
</main>

<!-- Logs Modal -->
<section id="logs-modal" class="modal">
  <section class="modal-content">
    <section class="modal-header">
      <h3>📋 Logs de Segurança</h3>
      <button class="modal-close" onclick="closeLogs()">&times;</button>
    </section>
    <section class="modal-body">
      <section id="logs-container">
        <!-- Logs serão carregados aqui -->
      </section>
    </section>
  </section>
</section>

<%- include('../partials/scripts', { pageJS: 'admin-dashboard' }) %>

</body>
</html>
