      <section class="alert alert-warning" style="background: #fef3cd; color: #856404; padding: 1rem; border-radius: 0.5rem; margin-bottom: 2rem; border: 1px solid #ffeaa7;">
        <% if (req.query.erro === 'dados-incompletos') { %>
          ‚ö†Ô∏è Por favor, preencha todos os campos obrigat√≥rios.
        <% } else { %>
          ‚ö†Ô∏è Ocorreu um erro. Tente novamente.
        <% } %>
      </section>
    <% } %>
    
    <section class="checkout-grid">
      <!-- Formul√°rio de Dados -->
      <section class="checkout-dados">
        <!-- Dados do Cliente -->
        <section class="form-section">
          <h2 class="section-title">Dados do Cliente</h2>
          
          <section class="customer-info">
            <section class="form-group">
              <label for="customer-name">Nome Completo *</label>
              <input type="text" id="customer-name" name="customer-name" required>
            </section>
            
            <section class="form-group">
              <label for="customer-email">E-mail *</label>
              <input type="email" id="customer-email" name="customer-email" required>
            </section>
            
            <section class="form-group">
              <label for="customer-phone">Telefone *</label>
              <input type="tel" id="customer-phone" name="customer-phone" required>
            </section>
            
            <section class="form-group">
              <label for="customer-document">CPF/CNPJ *</label>
              <input type="text" id="customer-document" name="customer-document" required>
            </section>
          </section>
        </section>
        <!-- M√©todos de Pagamento -->
        <section class="form-section">
          <h2 class="section-title">Escolha o M√©todo de Pagamento</h2>
          
          <!-- Container dos m√©todos de pagamento -->
          <section id="payment-methods" class="payment-methods">
            <!-- M√©todos ser√£o carregados dinamicamente via JavaScript -->
          </section>

          <!-- Container para cart√£o de cr√©dito/d√©bito -->
          <section id="card-container" class="payment-container">
            <h4>Dados do Cart√£o</h4>
            <section id="card-element">
              <!-- Stripe Elements ser√° montado aqui -->
            </section>
            <section id="card-errors" class="card-errors" role="alert"></section>
            
            <!-- Parcelamento para cart√£o de cr√©dito -->
            <section id="installments-container" class="installments-container" style="display: none;">
              <label for="installments">Parcelamento</label>
              <select id="installments">
                <option value="1">1x √† vista</option>
              </select>
              <section id="installment-display"></section>
            </section>
          </section>

          <!-- Container para PIX -->
          <section id="pix-container" class="payment-container">
            <section class="pix-info">
              <section class="pix-icon">üí≥</section>
              <h4>Pagamento via PIX</h4>
              <p>Voc√™ ser√° redirecionado para completar o pagamento</p>
              <p><strong>Desconto de 5%</strong> para pagamentos via PIX!</p>
            </section>
          </section>

          <!-- Container para Boleto -->
          <section id="boleto-container" class="payment-container">
            <section class="boleto-info">
              <section class="boleto-icon">ÔøΩ</section>
              <h4>Boleto Banc√°rio</h4>
              <p>Voc√™ ser√° redirecionado para imprimir o boleto</p>
              <p><strong>Vencimento:</strong> 3 dias √∫teis</p>
            </section>
          </section>
        </section>

        <!-- Total do Pedido -->
        <section class="form-section">
          <section id="payment-total" class="payment-total">
            <!-- Total ser√° calculado dinamicamente -->
          </section>
        </section>
        </section>
        
        <!-- Resumo do Pedido -->
        <section class="checkout-resumo">
          <section class="resumo-card">
            <h3 class="resumo-title">Resumo do Pedido</h3>
            
            <!-- Itens -->
            <section class="resumo-itens">
              <% carrinho.forEach(function(item) { %>
                <section class="resumo-item">
                  <section class="item-image-mini <%= item.bgClass %>"></section>
                  <section class="item-info-mini">
                    <section class="item-title-mini"><%= item.destino %></section>
                    <section class="item-pessoas"><%= item.quantidade %> <%= item.quantidade === 1 ? 'pessoa' : 'pessoas' %></section>
                  </section>
                  <section class="item-preco-mini">
                    <% 
                      const precoNum = parseFloat(item.preco.replace(/\./g, '').replace(',', '.'));
                      const totalItem = precoNum * item.quantidade;
                    %>
                    R$ <%= totalItem.toLocaleString('pt-BR') %>
