<style>
/* Estilos específicos para a página de sucesso do contato */
.sucesso-contato-hero {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  padding: 4rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.sucesso-icon {
  margin-bottom: 1.5rem;
}

.check-circle {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  animation: checkBounce 0.6s ease-out;
}

.sucesso-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  font-family: 'Pacifico', cursive;
}

.sucesso-subtitle {
  font-size: 1.125rem;
  opacity: 0.9;
  margin-bottom: 2rem;
}

.protocolo-contato {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(255, 255, 255, 0.15);
  padding: 0.75rem 1.5rem;
  border-radius: 2rem;
  font-weight: 500;
}

.protocolo-numero {
  font-family: 'Courier New', monospace;
  font-weight: 600;
  font-size: 1.1rem;
}

/* Timeline dos próximos passos */
.proximos-passos-contato {
  padding: 4rem 0;
  background: white;
}

.passos-timeline {
  display: grid;
  gap: 2rem;
  max-width: 800px;
  margin: 3rem auto 0;
}

.passo-timeline {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 2rem;
  align-items: center;
  padding: 2rem;
  background: #f8fafc;
  border-radius: 1rem;
  border-left: 4px solid var(--yellow-400);
}

.passo-timeline .passo-numero {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: var(--yellow-400);
  color: var(--slate-800);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.5rem;
}

.passo-content h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--navy);
  margin-bottom: 0.5rem;
}

.passo-content p {
  color: var(--slate-600);
  line-height: 1.5;
  margin-bottom: 0.5rem;
}

.passo-tempo {
  background: var(--yellow-100);
  color: var(--yellow-800);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.75rem;
  font-weight: 500;
}

/* Informações importantes */
.info-importante {
  padding: 4rem 0;
  background: #f8fafc;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.info-card-sucesso {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
}

.card-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.info-card-sucesso h3 {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--navy);
  margin-bottom: 1rem;
