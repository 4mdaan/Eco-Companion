.contato-icon {
  font-size: 1.5rem;
}

.contato-info {
  text-align: left;
}

.contato-info strong {
  display: block;
  font-size: 1rem;
  margin-bottom: 0.25rem;
}

.contato-info span {
  font-size: 0.875rem;
  opacity: 0.9;
}

/* Enquanto espera */
.enquanto-espera {
  padding: 4rem 0;
  background: #f8fafc;
}

.espera-intro {
  text-align: center;
  font-size: 1.125rem;
  color: var(--slate-600);
  margin-bottom: 3rem;
}

.acoes-espera {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
}

.acao-card {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  text-align: center;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
}

.acao-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.acao-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.acao-card h3 {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--navy);
  margin-bottom: 0.5rem;
}

.acao-card p {
  color: var(--slate-600);
  font-size: 0.875rem;
  line-height: 1.4;
}
</style>

<script>
// Animação do check quando carrega
window.addEventListener('load', function() {
  setTimeout(() => {
    const checkCircle = document.querySelector('.check-circle');
    if (checkCircle) {
      checkCircle.classList.add('animate-check');
    }
  }, 500);
});

// Copiar protocolo ao clicar
document.querySelector('.protocolo-numero').addEventListener('click', function() {
  const protocolo = '<%= protocolo %>';
  navigator.clipboard.writeText(protocolo).then(() => {
    alert('Protocolo copiado para a área de transferência!');
  });
});

document.querySelector('.protocolo-numero').style.cursor = 'pointer';
document.querySelector('.protocolo-numero').title = 'Clique para copiar';
</script>