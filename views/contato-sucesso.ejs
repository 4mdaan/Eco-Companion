.info-card-sucesso p {
  color: var(--slate-600);
  line-height: 1.5;
  font-size: 0.875rem;
}

/* Contatos de urgência */
.contatos-urgencia {
  padding: 4rem 0;
  background: white;
}

.urgencia-content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.urgencia-content h2 {
  font-size: 2rem;
  font-weight: 600;
  color: var(--navy);
  margin-bottom: 1rem;
}

.urgencia-content p {
  color: var(--slate-600);
  margin-bottom: 2rem;
}

.contatos-rapidos {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
}

.contato-rapido {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1.5rem;
  border-radius: 1rem;
  text-decoration: none;
  transition: all 0.3s ease;
  color: white;
}

.contato-rapido.telefone {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.contato-rapido.whatsapp {
  background: linear-gradient(135deg, #25d366, #128c7e);
}

.contato-rapido.email {
  background: linear-gradient(135deg, #dc2626, #b91c1c);
}

.contato-rapido:hover {
  transform: translateY(-2px);
